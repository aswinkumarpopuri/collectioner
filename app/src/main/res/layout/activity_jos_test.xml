<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mac.training.collectioner.JosTest">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user"
        android:hint="User"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getUserCategories"
        android:id="@+id/QueryCats"
        android:onClick="queryCollections"
        android:layout_alignTop="@+id/user"
        android:layout_alignParentEnd="true" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="insert rand collections in rand users"
        android:id="@+id/ins_cat"
        android:onClick="insertCollection"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/colKey"
        android:text="-KS3gsWwkm8cqzjZ_Pph"
        android:layout_below="@+id/user"
        android:layout_toEndOf="@+id/user"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Collection"
        android:id="@+id/button"
        android:onClick="deleteCollection"
        android:layout_below="@+id/colKey"
        android:layout_alignStart="@+id/ins_cat"
        android:layout_marginTop="35dp" />


</RelativeLayout>
